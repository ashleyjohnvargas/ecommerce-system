<body>
    @{
        var showRegister = TempData["ShowRegister"] != null ? "active" : "";
    }
    @if (TempData["ShowPopup"] != null && (bool)TempData["ShowPopup"])
    {
        <script>
            document.addEventListener("DOMContentLoaded", function () {
                Swal.fire({
                    title: 'Invalid input!',
                    text: '@TempData["PopupMessage"]',
                    icon: 'error',
                    confirmButtonText: 'OK'
                });
            });
        </script>
    }

    <!--REGISTER-->
    <div class="container @showRegister" id="container">

        <div class="form-container sign-up">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h1>Create an Account</h1>
            
                <span>Use your email for registration</span>
                <br />
                <input type="hidden" id="activePanel" name="activePanel" value="@(TempData["ShowRegister"] != null ? "register" : "login")">

                <input type="text" asp-for="UserName" placeholder="Full Name">
                <input type="email" asp-for="Email" placeholder="Email">
                <div class="password-container" style="position: relative; width: 304px;">
                    <input type="password" id="password" name="password" asp-for="Password" placeholder="Password">
                    <span class="toggle-password" onclick="togglePasswordVisibility('password', this)"
                          style="position: absolute; top: 20px; right: 15px; cursor: pointer;">
                        <i class="bx bx-hide" style="font-size: 16px;"></i>
                    </span>
                </div>
                <p>
                    By signing up, you agree to our
                    <a href="#" data-bs-toggle="modal" data-bs-target="#termsModal">Terms and Conditions</a>
                    and
                    <a href="#" data-bs-toggle="modal" data-bs-target="#privacyModal">Privacy Policy</a>.
                </p>


                <!--Below are the hidden inputs-->
                <input type="hidden" asp-for="Id">
                <input type="hidden" asp-for="PhoneNumber">
                <input type="hidden" asp-for="Address">
                <button>Sign Up</button>
            </form>
        </div>

        <!--LOGIN-->
        <div class="form-container sign-in">
            <form asp-controller="Account" asp-action="Login" method="post">
                <h1>Sign In</h1>
                <span>Enter your login credentials</span>

                <br>
                <input type="hidden" id="activePanel" value="@(TempData["ShowRegister"] != null ? "register" : "login")">

                <input type="email" name="email" placeholder="Email">
                <div class="password-container" style="position: relative; width: 304px;">
                    <input type="password" id="passwordz" name="password" placeholder="Password">
                    <span class="toggle-password" onclick="togglePasswordVisibility('passwordz', this)"
                          style="position: absolute; top: 20px; right: 15px; cursor: pointer;">
                        <i class="bx bx-hide" style="font-size: 16px;"></i>
                    </span>
                </div>
                @* <a href="#">Forget Your Password?</a> *@
               <button>Sign In</button>
            </form>
        </div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-left">
                    <h1>Hi again, Friend!</h1>
                    <p>Enter your credentials to use all of Gizmode's features</p>
                    <button class="hidden" id="login">Sign In</button>
                </div>
                <div class="toggle-panel toggle-right">
                    <h1 style="font-size: 32px; color: #111">Welcome to Gizmode!</h1>
                    <p>Register with your credentials to use all of Gizmode's features</p>
                    <button class="hidden" id="register">Sign Up</button>
                </div>
            </div>
        </div>
    </div>


