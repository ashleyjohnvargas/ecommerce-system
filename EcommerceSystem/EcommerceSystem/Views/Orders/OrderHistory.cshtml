@{
    ViewData["Title"] = "Products";
    Layout = "_Layout2";
}

@model IEnumerable<EcommerceSystem.Models.OrderHistoryViewModel>


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order History - Gizmode</title>
    <!-- Font Awesome CDN -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" rel="stylesheet">
    <style>
        .order-history {
            padding: 20px;
            max-width: 800px;
            margin: 20px auto;
            border: 1px solid #ddd;
            border-radius: 8px;
            background-color: #f9f9f9;
        }

            .order-history h2 {
                margin-bottom: 20px;
                color: #333;
            }

        .order {
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

            .order:last-child {
                border-bottom: none;
            }

        .order-details {
            display: flex;
            justify-content: space-between;
        }

        .order-date {
            color: #777;
        }

        .order-status {
            font-weight: bold;
            color: green;
        }

    </style>
</head>
<body>

    <!-- Order History Section -->
    <div class="order-history">
        <h2>Your Order History</h2>
        @foreach (var order in Model)
        {
            <div class="order">
                <div class="order-details">
                    <span>Order Ref#: @order.OrderId</span>
                    <span class="order-date">@order.CreatedAt</span>
                    <span class="order-status">@order.OrderStatus</span>
                </div>
                <div>Items: @order.ItemsCount</div>
            </div>
        }
    </div>
</body>
</html>