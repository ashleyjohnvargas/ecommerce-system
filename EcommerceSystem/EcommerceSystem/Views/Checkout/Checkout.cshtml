@{
    ViewData["Title"] = "Checkout";
    Layout = "_Layout2";
    var cartModel = Model;
    var checkoutModel = ViewBag.CheckoutModel as CheckoutViewModel;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Billing and Cart</title>
    <style>
        .temp-body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 80px 0 150px;
            display: flex;
            justify-content: center;
            background-color: #f5f5f5;
        }

        .checkout-container {
            display: flex;
            width: 90%;
            max-width: 1200px;
            margin: 20px 0;
            gap: 20px;
        }

        .column {
            background: #ffffff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            flex: 1;
        }

        .column h2 {
            margin-bottom: 20px;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-group label {
            display: block;
            margin-bottom: 5px;
            font-weight: bold;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 14px;
        }

        .cart-item {
            display: flex;
            align-items: center;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 10px;
        }

        .cart-item img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            margin-right: 15px;
        }

        .cart-item .name {
            flex: 1;
            font-size: 16px;
        }

        .cart-item .subtotal {
            font-weight: bold;
        }

        .summary {
            margin-top: 20px;
        }

        .summary .row {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .summary .shipping {
            border-top: 1px solid #ddd;
            border-bottom: 1px solid #ddd;
            padding: 10px 0;
        }

        .payment-methods {
            margin-top: 20px;
            padding-top: 10px;
            border-top: 1px solid #ddd;
        }

        .payment-method {
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

        .payment-method img {
            width: 30px;
            height: 20px;
            object-fit: cover;
            margin-left: 10px;
        }

        .place-order {
            margin-top: 20px;
            width: 100%;
            padding: 12px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            cursor: pointer;
        }

        .place-order:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>

    <div class="temp-body">
        <div class="checkout-container">
            <!-- Column 1: Billing Details -->
            <div class="column">
                <form method="post" asp-action="PlaceOrder">
                    <h2>Billing Details</h2>
                    <div class="form-group">
                        <label>First Name</label>
                        <input asp-for="@checkoutModel.FirstName" name="FirstName" placeholder="Enter your first name" required>
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        <input asp-for="@checkoutModel.LastName" name="LastName" placeholder="Enter your last name" required>
                    </div>
                    <div class="form-group">
                        <label>Company Name</label>
                        <input asp-for="@checkoutModel.CompanyName" name="CompanyName" placeholder="Enter your company name">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input asp-for="@checkoutModel.Address" name="Address" placeholder="Address" required>
                    </div>
                    <div class="form-group">
                        <label>Phone Number</label>
                        <input asp-for="@checkoutModel.PhoneNumber" name="PhoneNumber" minlength="11" placeholder="Enter your phone number" required>
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input asp-for="@checkoutModel.EmailAddress" type="email" name="EmailAddress" placeholder="Enter your email address" required>
                    </div>
                    <!-- Payment Methods -->
                    <div class="payment-methods">
                        <h3>Payment Methods</h3>
                        <div class="payment-method">
                            <input asp-for="@checkoutModel.PaymentMethod" type="radio" id="bank" name="PaymentMethod" value="Bank" required>
                            <label for="bank">Bank</label>
                        </div>
                        <div class="payment-method">
                            <input asp-for="@checkoutModel.PaymentMethod" type="radio" id="ewallet" name="PaymentMethod" value="E-Wallet" required>
                            <label for="ewallet">E-Wallet</label>
                        </div>
                        <div class="payment-method">
                            <input asp-for="@checkoutModel.PaymentMethod" type="radio" id="cod" name="PaymentMethod" value="CashOnDelivery" required>
                            <label for="cod">Cash on Delivery</label>
                        </div>
                    </div>
                    <!-- Submit Button -->
                    <button type="submit" class="place-order">Place Order</button>
                </form>
            </div>
            

            <!-- Column 2: Cart and Summary -->
            <div class="column">
                <h2>Your Cart</h2>
                @foreach (var item in cartModel.CartItems)
                {
                    <div class="cart-item">
                        <img src="@item.ImagePath" alt="Product Image">
                        <span class="name">@item.ProductName</span>
                        <span class="subtotal">₱@item.ProductSubtotal</span>
                    </div>
                }
                <div class="summary">
                    <div class="row">
                        <span>Subtotal:</span>
                        <span>₱@Model.CartTotalPrice</span>
                    </div>
                    <div class="row shipping">
                        <span>Shipping:</span>
                        <span>Free</span>
                    </div>
                    <div class="row">
                        <span>Total:</span>
                        <span>₱@Model.CartTotal</span>
                    </div>
                </div>
            </div>

        </div>
    </div>

    


    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Select all payment method radio buttons
            const paymentMethods = document.querySelectorAll('input[name="PaymentMethod"]');
            let isPaymentMethodSelected = false;  // Track if a payment method has been selected

            paymentMethods.forEach((method) => {
                method.addEventListener("change", function () {
                    if (isPaymentMethodSelected) {
                        // Show error message
                        alert("You cannot select another payment method after choosing one. Please choose only one.");

                        // Reset all payment methods
                        paymentMethods.forEach((otherMethod) => {
                            otherMethod.checked = false;  // Uncheck all payment methods
                        });

                        // Reset the selection flag
                        isPaymentMethodSelected = false;
                    } else {
                        // Mark that a payment method has been selected
                        isPaymentMethodSelected = true;
                    }
                });
            });
        });
    </script>
</body>
</html>
