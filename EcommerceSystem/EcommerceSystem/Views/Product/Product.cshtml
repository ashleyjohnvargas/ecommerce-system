@model PaginatedProductModel

@{
    ViewData["Title"] = "Products";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EP3xmZROyPf6lQ3LclD69lmb6rKLMu/tJcQIA2nGUz7g16HjBrCWKZ0si19Q6PBd" crossorigin="anonymous">
    <style>
        /* Center the container and give some padding */
        .container {
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            margin-top: 30px;
        }

        h2 {
            color: #343a40;
            font-size: 2rem;
            margin-bottom: 20px;
        }

        /* Table Styling */
        .table {
            font-size: 1.1rem; /* Enlarge font size */
            border-radius: 8px;
        }

        .table th {
            background-color: #343a40;
            color: #ffffff;
            font-size: 1.2rem;
        }

        .table td {
            font-size: 1.1rem; /* Enlarge font size */
            padding: 12px; /* Increase padding */
        }

        .btn-primary, .btn-outline-primary, .btn-outline-danger, .btn-success {
            font-size: 1rem; /* Increase font size */
            padding: 10px 20px; /* Increase padding */
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-danger {
            background-color: #dc3545;
            border-color: #dc3545;
        }

        .btn-outline-primary:hover, .btn-outline-danger:hover {
            background-color: #f8f9fa; /* Light hover effect */
        }

        /* Pagination Controls */
        .pagination-controls {
            margin-top: 20px;
        }

        .page-info {
            font-weight: bold;
            font-size: 1.1rem;
        }

        /* Center the container */
        .centered-container {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
        }

        .table-container {
            width: 80%; /* Make the table width larger */
        }

        /* Add a bit of spacing between rows */
        .table tbody tr {
            transition: background-color 0.2s ease;
        }

        .table tbody tr:hover {
            background-color: #f8f9fa;
        }

        /* Flexbox for buttons to sit beside each other */
        .action-buttons {
            display: flex;
            gap: 10px; /* Adds space between buttons */
        }
    </style>
</head>

<div class="centered-container">
    <div class="container table-container">
        <h2 class="mb-4 text-center">Product Management</h2>
        
        <!-- Products Table -->
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Category</th>
                    @* <th>Image</th> *@
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var product in Model.Products)
                {
                    <tr>
                        <td>@product.Name</td>
                        <td>@product.Description</td>
                        <td>@string.Format("{0:C}", product.Price)</td>
                        <td>@product.StockQuantity</td>
                        <td>@product.Category</td>         
                        @* <td>
                            @if (product.Images != null && product.Images.Any())
                            {
                                <span>@product.ImageStatus</span>
                            }
                            else
                            {
                                <span>@product.ImageStatus</span>
                            }
                        </td>                  *@
                        <td style="width: 230px;">
                            <div class="action-buttons">
                                <a asp-action="AddImagePage" asp-route-id="@product.Id" class="btn btn-sm btn-outline-primary">Add Image</a>
                                <form asp-action="Delete" asp-route-id="@product.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <!-- Pagination Controls -->
        <div class="pagination-controls d-flex justify-content-between align-items-center">
            <div style="display:flex; flex-direction: row;">
                <div class="page-info" style="width: 100px;">
                    Page @Model.CurrentPage of @Model.TotalPages
                </div>
                <div style="width: 200px;">
                    @if (Model.CurrentPage > 1)
                    {
                        <a asp-action="Product" asp-route-page="@(Model.CurrentPage - 1)" class="btn btn-outline-primary btn-sm">← Previous</a>
                    }
                    @if (Model.CurrentPage < Model.TotalPages)
                    {
                        <a asp-action="Product" asp-route-page="@(Model.CurrentPage + 1)" class="btn btn-outline-primary btn-sm">Next →</a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
