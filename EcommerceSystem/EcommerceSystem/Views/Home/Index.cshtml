@{
    ViewData["Title"] = "Home";
}
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewData["Title"]</title>
        <!-- Font Awesome CDN -->
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" rel="stylesheet">

        <style>
            /* Categories Section */
            .categories {
                padding: 40px 0;
                background-color: #f9f9f9;
                text-align: left; /
            }

            .container {
                width: 80%;
                margin: 0 auto;
                text-align: left;       
            }

            .categories h2 {
                font-size: 1.8rem;
                margin-bottom: 20px;
                color: #333;
            }

            .categories-list {
                display: flex;
                justify-content: center;
                gap: 20px;
                flex-wrap: nowrap;
            }

            /* Category Box */
            .category {
                display: flex;
                flex-direction: column;
                align-items: center;
                text-align: center;
                padding: 20px;
                background-color: #fff;
                border-radius: 10px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                width: 150px;
                transition: transform 0.3s ease;
            }

            .category:hover {
                background-color: violet;
                color: white;
                transform: translateY(-5px);
            }

            .category a {
                text-decoration: none;
                color: inherit;
                width: 100%;
                height: 100%;
                display: flex;
                flex-direction: column;
                align-items: center;
                justify-content: center;
            }

            .category i {
                font-size: 2rem;
                color: black;
                margin-bottom: 10px;
            }

            .category p {
                font-size: 1rem;
                color: #333;
            }

            /* Featured Products Section */
            .featured-products {
                padding: 40px 0;
                background-color: #f9f9f9;
            }

            .product-list {
                display: flex;
                justify-content: center;
                gap: 20px;
            }

            .product {
                text-align: center;
                padding: 20px;
                background-color: #fff;
                border-radius: 10px;
                box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
                width: 200px;
            }

            .product img {
                width: 100%;
                height: auto;
            }

            .product h3 {
                font-size: 1.2rem;
                margin-top: 10px;
            }

            .product p {
                font-size: 1rem;
                color: #333;
            }

            .product button {
                padding: 10px 20px;
                background-color: violet;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

            .product button:hover {
                background-color: #8a2be2;
            }

        </style>
    </head>
    <body>
        <!-- Categories Section -->
    <section class="categories">
        <div class="container">
            <h2>Browse By Category</h2>
            <div class="categories-list">
                <div class="category">
                    <i class="fas fa-mobile-alt"></i>
                    <p>Phones</p>
                </div>
                <div class="category">
                    <i class="fas fa-desktop"></i>
                    <p>Computers</p>
                </div>
                <div class="category">
                    <i class="fas fa-smartwatch"></i>
                    <p>Smartwatch</p>
                </div>
                <div class="category">
                    <i class="fas fa-camera"></i>
                    <p>Cameras</p>
                </div>
                <div class="category">
                    <i class="fas fa-headphones"></i>
                    <p>Headphones</p>
                </div>
                <div class="category">
                    <i class="fas fa-gamepad"></i>
                    <p>Gaming</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Featured Products Section -->
    <section class="featured-products">
        <div class="container">
            <h2>Featured Products</h2>
            <div class="product-list">
                <div class="product">
                    <img src="~/images/product1.jpg" alt="Product 1">
                    <h3>Product 1</h3>
                    <p>$199.99</p>
                    <button>Add to Cart</button>
                </div>
                <div class="product">
                    <img src="~/images/product2.jpg" alt="Product 2">
                    <h3>Product 2</h3>
                    <p>$299.99</p>
                    <button>Add to Cart</button>
                </div>
                <div class="product">
                    <img src="~/images/product3.jpg" alt="Product 3">
                    <h3>Product 3</h3>
                    <p>$399.99</p>
                    <button>Add to Cart</button>
                </div>
            </div>
        </div>
    </section>
    </body>
</html>



        